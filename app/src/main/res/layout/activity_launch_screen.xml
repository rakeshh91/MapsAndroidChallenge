<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_launch_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.timeset.codechallenge.activities.LaunchScreenActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageLaunchScreen"
        android:layout_above="@+id/titleLaunchScreen"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launch_screen"
        android:layout_marginBottom="@dimen/image_title_margin_launchscreen"/>
    <TextView
        android:text="@string/launch_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/titleLaunchScreen"
        android:textColor="@color/textColor"
        android:textSize="@dimen/title_launch_screen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tagLaunchScreen"
        android:text="@string/tag_launch_screen"
        android:layout_below="@+id/titleLaunchScreen"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/tag_title_margin_launchscreen"/>
</RelativeLayout>
